{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build TestRunner",
            "program": "${workspaceFolder}/TestRunner/bin/Debug/net8.0/TestRunner.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Start debug server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debugger",
            "program": "${workspaceFolder}/Debugger/bin/Debug/net8.0/Debugger.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Attach to debugger",
            "type": "moonsharp-debug",
            "request": "attach",
            "preLaunchTask": "Wait for debug server",
            "debugServer": 41912,
            "HELP": "Please set 'debugServer':41912 (or whatever port you ar connecting to) right after the 'version' field in this json."
        }
    ],
    "compounds": [
        {
            "name": "Debug",
            "configurations": ["Start debug server", "Attach to debugger"],
            "stopAll": true,
        }
    ]
}