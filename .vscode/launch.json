    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run MoonSharpPlayground",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build MoonSharpPlayground",
            "program": "${workspaceFolder}/MoonSharpPlayground/bin/Debug/net8.0/MoonSharpPlayground.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Start debug server",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Debugger",
            "program": "${workspaceFolder}/Debugger/bin/Debug/net8.0/Debugger.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": "Attach to moonsharp debugger",
            "type": "moonsharp-debug",
            "request": "attach",
            "debugServer": 41912,
            "preLaunchTask": "Wait for moonsharp debug server"
        }
    ],
    "compounds": [
        {
            "name": "Debug",
            "configurations": ["Start debug server", "Attach to moonsharp debugger"],
            "stopAll": true,
        }
    ]
}