{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build ${workspaceFolder}/MoonSharpPlayground/MoonSharpPlayground.csproj",
			"file": "${workspaceFolder}/MoonSharpPlayground/MoonSharpPlayground.csproj",
			"group": "build",
			"problemMatcher": [],
			"label": "build MoonSharpPlayground"
		},
		{
			"type": "dotnet",
			"task": "build ${workspaceFolder}/Tests/Tests.csproj",
			"file": "${workspaceFolder}/Tests/Tests.csproj",
			"group": "build",
			"problemMatcher": [],
			"label": "build Tests"
		},
		{
			"type": "dotnet",
			"task": "build ${workspaceFolder}/Debugger/Debugger.csproj",
			"file": "${workspaceFolder}/Debugger/Debugger.csproj",
			"group": "build",
			"problemMatcher": [],
			"label": "build Debugger"
		},
		{
			"label": "test",
			"command": "dotnet",
			"type": "shell",
			"group": "test",
			"args": [
				"test",
				"${workspaceFolder}/Tests/Tests.csproj"
			],
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}/"
			}
		},
		{
			"type": "shell",
			"label": "Wait for debug server",
			"command": "sleep 0.5",
		}
	]
}